<% provide(:title, 'Sign up') %>
<h1>New metric</h1>

<%#= render 'form' %>

<div class="row">
  <div class="span6 offset3">
      <%= form_for(@metric) do |f| %>
        <%#= render 'shared/error_messages', object: @metrics %>

        <%= f.label :metric_config_id %>
        <%= f.collection_select(:metric_config_id, @metricconfigs, :id, :metricname) %>

        <%= f.label :metricdate %>
        <%= f.date_field :metricdate %>

        <%= f.label :value %>
        <%= f.text_field :value %>


        <%= f.submit "Create Metric", class: "btn btn-large btn-primary" %>
      <% end %>
  </div>
</div>

<%= link_to 'Back', metrics_path %>