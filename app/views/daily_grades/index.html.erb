<h1>Daily Grades</h1>

<table>
  <thead>
    <tr>
      <th>Grade</th>
      <th>Points</th>
      <th>Possible</th>
      <th>Grade Date</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @daily_grades.each do |daily_grade| %>
      <tr>
        <td><%= @grades.find(daily_grade.grade_id).gradevalue %></td>
        <td><%= daily_grade.points %></td>
        <td><%= daily_grade.possible %></td>
        <td><%= daily_grade.gradeDate %></td>
        <td><%#= link_to 'Show', daily_grade %></td>
        <td><%#= link_to 'Edit', edit_daily_grade_path(daily_grade) %></td>
        <td><%#= link_to 'Destroy', daily_grade, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%#= link_to 'New Daily grade', new_daily_grade_path %>
<%= link_to "Re-calculate All", recalc_path(:id => @user.id), class: "btn btn-large btn-primary" %> 
