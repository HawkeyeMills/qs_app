<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
    <div class="span8">
    <%# if @user.metric_configs.any? %>
    <%if @user.metrics.any? %>
      <h3>Daily Metrics For <%= @todayDate %>(<%= @metricsToShow.count %>)</h3>
      <ol class="metricConfigs">
        <% @metricsToShow.each do |metric|%>
          <%= @metricconfigs.find(metric.metric_config_id).metricname%>
          <%= metric.value %> <BR>
          <%#= link_to 'Show', metric %>
          <%#= link_to 'Edit', edit_metric_path(metric) %>
          <%#= link_to 'Destroy', metric, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
      </ol>
      <%#= will_paginate @metricconfigs %>
      <%#= link_to "Update FitBit Metrics", fbupdate_path, class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>