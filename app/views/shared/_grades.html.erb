<% @user ||= current_user %>

<div class="stats">
<%= hidden_field_tag :id, @user.id %>
    <strong id="following" class="stat">
      <%#= @user.followed_users.count %>
      <h1> <%= @grade %> </h1>
    </strong>
  <%= link_to 'Calculate Grade', calcgrades_path(:id => @user.id, :calcgrades => 'Y', :metricdate => @dateToShow,), class: "btn btn-large btn-primary" %>
</div>